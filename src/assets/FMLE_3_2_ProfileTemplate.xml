<?xml version="1.0" encoding="UTF-8"?>
<!-- This template is created for FMLE 3.2 -->
<flashmedialiveencoder_profile>
    <preset>
        <name>FMLELib Preset</name>
        <description>A ZaaLabs FMLELib Preset</description>
    </preset>
    <capture>
        <video>
	        <device>#{captureInputName}</device>
	        <crossbar_input>0</crossbar_input>
	        <frame_rate>#{captureFramerate}</frame_rate>
	        <size>
	            <width>#{captureWidth}</width>
	            <height>#{captureHeight}</height>
	        </size>
        </video>
    </capture>
    <process>
        <video>
        	<preserve_aspect></preserve_aspect>
        </video>
    </process>
    <encode>
        <video>
        <format>#{encodeFormat}</format>
        <datarate>#{encodeDataRate}</datarate>
        <outputsize>#{encodeOutputSize}</outputsize>
        <!-- H.264 advanced settings -->
        <advanced>
            <profile>Main</profile>
            <level>2.1</level>
            <keyframe_frequency>5 Seconds</keyframe_frequency>
        </advanced>
        <autoadjust>
            <enable>false</enable>
            <maxbuffersize>1</maxbuffersize>
            <dropframes>
            	<enable>false</enable>
            </dropframes>
            <degradequality>
	            <enable>true</enable>
	            <minvideobitrate></minvideobitrate>
	            <preservepfq>false</preservepfq>
            </degradequality>
        </autoadjust>
        </video>
    </encode>
    <restartinterval>
        <days></days>
        <hours></hours>
        <minutes></minutes>
    </restartinterval>
    <reconnectinterval>
        <attempts></attempts>
        <interval></interval>
    </reconnectinterval>
    <output>
        <rtmp>
	        <url>#{outputURL}</url>
	        <backup_url>#{outputURLBackup}</backup_url>
	        <stream>#{outputStreamName}</stream>
        </rtmp>
    </output>
    <metadata>
        <entry>
	        <key>author</key>
	        <value>#{metaAuthor}</value>
        </entry>
        <entry>
	        <key>copyright</key>
	        <value>#{metaCopyright}</value>
        </entry>
        <entry>
	        <key>description</key>
	        <value>#{metaDescription}</value>
        </entry>
        <entry>
	        <key>keywords</key>
	        <value>#{metaKeywords}</value>
        </entry>
        <entry>
	        <key>rating</key>
	        <value>#{metaRating}</value>
        </entry>
        <entry>
	        <key>title</key>
	        <value>#{metaTitle}</value>
        </entry>
    </metadata>
    <preview>
        <video>
	        <input>
	            <zoom>100%</zoom>
	        </input>
	        <output>
	            <zoom>100%</zoom>
	        </output>
        </video>
        <audio></audio>
    </preview>
    <log>
        <level>#{logLevel}</level>
        <directory>#{logDirectory}</directory>
    </log>
</flashmedialiveencoder_profile>